@import 'nib'

html, body
  margin 0
  padding 0
  background #000

h1 
  margin-bottom 20px
  font 20px/1.5 sans-serif

.terminal 
  padding-left 10px
  float left
  border #000 solid 5px
  font-family "DejaVu Sans Mono", "Liberation Mono", monospace
  font-size 11px
  color #f0f0f0
  background #000

.reverse-video 
  color #000
  background #f0f0f0

.header
  height: 20px

  .icon-container
    background-color white
    position absolute
    right 4px
    top 2px
    border-radius 10px
    width 14px
    height 14px
    text-align center
    font-size 10px
    box-shadow 0px 0px 2px #000
    i
      color #222
      display block
      margin-top 2px
      transition 300ms
      &:hover
        color #a00
        cursor pointer
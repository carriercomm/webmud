extends layout

block scripts
  script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
  script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.12/angular.min.js')
  script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.12/angular-route.min.js')
  script(src='//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js')
  script(src='/scripts/admin.js')

block styles
  
  link(rel='stylesheet',href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css')
  link(href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css",rel="stylesheet")
  link(rel='stylesheet',href='//netdna.bootstrapcdn.com/bootswatch/3.1.0/lumen/bootstrap.min.css')
  link(rel='stylesheet',href='/css/admin.css')

block content
  if user
    div(ng-controller='main')
      include ../partials/navbar
      .container
        div(ng-view)
  else
    div
      include ../partials/navbar
      .container
        include login    
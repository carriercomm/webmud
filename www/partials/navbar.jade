nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
  .container-fluid
    a.navbar-brand(href="#") Webmud
    if user
      ul.nav.navbar-nav
        li(ng-class="{active: section=='admin'}"): a(href="#/admin") Admin
        li(ng-class="{active: section=='stats'}"): a(href="#/stats") Stats
